@{
    HomeViewModel model = Model;
    var categories = model.Categories;
    var products = model.Products;
    // List<Product> products = new List<Product>();
}






        <div class="row" style="margin-left: 278px">
            @foreach (var item in products)
            {
                <!-- product -->
                <div class="col-md-4 col-xs-6">
                    <div class="product">
                        <div class="product-img">
                            <img src="@item.ImageUrl" alt="@item.Name">
                            <div class="product-label">
                                <!-- Show discount percentage based on OldPrice and Price -->
                                <span class="sale">-@(((item.OldPrice - item.Price) / item.OldPrice) * 100)%</span>
                                <span class="new">NEW</span>
                            </div>
                        </div>
                        <div class="product-body">
                            <p class="product-category">@item.Category?.Name</p>
                            <h3 class="product-name"><a href="#">@item.Name</a></h3>
                            <h4 class="product-price">
                                $@item.Price.ToString("F2")
                                <del class="product-old-price">$@item.OldPrice.ToString("F2")</del>
                            </h4>
                            <div class="product-rating">
                                <i class="fa fa-star"></i>
                                <i class="fa fa-star"></i>
                                <i class="fa fa-star"></i>
                                <i class="fa fa-star"></i>
                                <i class="fa fa-star-o"></i>
                            </div>
                            <div class="product-btns">
                                <button class="add-to-wishlist"><i class="fa fa-heart-o"></i><span class="tooltipp">add to wishlist</span></button>
                                <button class="add-to-compare"><i class="fa fa-exchange"></i><span class="tooltipp">add to compare</span></button>
                                <button class="quick-view"><i class="fa fa-eye"></i><span class="tooltipp">quick view</span></button>
                            </div>
                        </div>
                        <div class="add-to-cart">
                            <button class="add-to-cart-btn"><i class="fa fa-shopping-cart"></i> add to cart</button>
                        </div>
                    </div>
                </div>
                <!-- /product -->
            }
        </div>
    </div>
</div>
<!-- /store products -->
